doctype html
html
  head
    block head
      title Better-Than-Steam
      link(rel='stylesheet' href='/stylesheets/reset.css')
      link(rel='stylesheet' href='/stylesheets/main.css')
      link(rel='stylesheet' href='/stylesheets/gamefeed.css')
  body
    nav(class='navbar')
      ul(class='navbar-items')
        div(class='navbar-items__logo-wrapper')
          li(class='nav-item')
            a(href='/')
              img(src='/img/pac-man-steam-logo.png' alt="logo" href='/' id='logo' )
        div(class='navbar-items__user-wrappers')
          if locals.authenticated
            li
              a(href='/users') #{locals.user.username}
            li
              form(action='/users/logout')
                button(type='submit' formmethod='post') Logout
          else
            li
              a(href='/users/signup') Signup
            li
              a(href='/users/login') Login


    block content
